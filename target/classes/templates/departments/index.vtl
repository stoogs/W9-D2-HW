
<h1 class="pageHeader">All Departments</h1>
<div>
    <a href="/departments/new" class="button center">New Department</a>  <!-- NEW -->
</div>
<table>
    <h2>Department</h2>
    <tr>
        <th>ID</th>
        <th>First Name</th>
    </tr>
    #foreach($department in $departments)
    <tr>
        <td>$department.getId()</td>
        <td>$department.getTitle()</td>
    </tr>
    #end
</table>